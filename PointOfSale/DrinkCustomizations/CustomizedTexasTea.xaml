<UserControl x:Class="PointOfSale.CustomizedTexasTea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <StackPanel Background="White">
            <TextBlock FontSize="30" Text="Customize Texas Tea!"/>

            <StackPanel Orientation="Horizontal">
                <Label>Sweet</Label>
                <CheckBox IsChecked="{Binding Path=Sweet}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label>Lemon</Label>
                <CheckBox IsChecked="{Binding Path=Lemon}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label>Small</Label>
                <CheckBox IsChecked="{Binding Path=Small}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label>Medium</Label>
                <CheckBox IsChecked="{Binding Path=Medium}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label>Large</Label>
                <CheckBox IsChecked="{Binding Path=Large}"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
